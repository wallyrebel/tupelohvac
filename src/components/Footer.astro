---
import AdSlot from "./AdSlot.astro";

interface Props {
  footerText: string;
  footerCtaLabel: string;
  serviceAreas: string[];
}

const { footerText, footerCtaLabel, serviceAreas } = Astro.props;
---

<footer class="site-footer">
  <div class="container">
    <AdSlot placement="footer_banner" />
  </div>
  <div class="container footer-main surface">
    <div>
      <h2>Need HVAC help in Tupelo?</h2>
      <p>{footerText}</p>
      <a class="button primary" href="/#request-service">{footerCtaLabel}</a>
    </div>
    <div>
      <h3>Service Areas</h3>
      <p class="muted">{serviceAreas.join(", ")}</p>
      <p><a href="/privacy-policy/">Privacy Policy</a> | <a href="/rss.xml">RSS</a></p>
    </div>
  </div>
</footer>

<style>
  .site-footer {
    padding-bottom: var(--space-6);
  }
  .footer-main {
    margin-top: var(--space-4);
    padding: var(--space-6);
    display: grid;
    gap: var(--space-6);
  }
  @media (min-width: 860px) {
    .footer-main {
      grid-template-columns: 1.2fr 1fr;
    }
  }
</style>
