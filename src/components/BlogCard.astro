---
import type { CollectionEntry } from "astro:content";

interface Props {
  post: CollectionEntry<"blog">;
}

const { post } = Astro.props;
---

<article class="blog-card surface">
  {post.data.featured_image && <img src={post.data.featured_image} alt={post.data.featured_image_alt ?? post.data.title} loading="lazy" />}
  <div class="card-body">
    <p class="muted">{post.data.category} | {post.data.date.toLocaleDateString()}</p>
    <h3><a href={`/blog/${post.slug}/`}>{post.data.title}</a></h3>
    <p>{post.data.description}</p>
  </div>
</article>

<style>
  .blog-card {
    overflow: hidden;
  }
  .card-body {
    padding: var(--space-4);
  }
  .blog-card p {
    margin-top: 0;
  }
  .blog-card h3 {
    margin-bottom: 0.5rem;
  }
</style>
